<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cnlive.com.myapplication.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView" />

    <Button
        android:text="添加数据"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:id="@+id/add"
        android:layout_alignParentEnd="true"

        />

    <Button
        android:text="查询"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add"
        android:layout_alignParentStart="true"
        android:id="@+id/selector"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="查询所有数据"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selector"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:id="@+id/seletorAll"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="添加WorkMan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seletorAll"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:id="@+id/addWork"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="查询workMan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addWork"
        android:layout_marginTop="52dp"
        android:id="@+id/qureyWork"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
